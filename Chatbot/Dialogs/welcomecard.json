{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "Image",
      "url": "https://upload.wikimedia.org/wikipedia/en/thumb/0/04/Utoronto_coa.svg/1200px-Utoronto_coa.svg.png",
      "size": "stretch"
    },
    {
      "type": "TextBlock",
      "spacing": "medium",
      "size": "default",
      "weight": "bolder",
      "text": "${WelcomeCardTitle()}",
      "wrap": true,
      "maxLines": 0
    },
    {
      "type": "TextBlock",
      "size": "default",
      "isSubtle": true,
      "text": "${WelcomeCardBody()}",
      "wrap": true,
      "maxLines": 0
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Tell me about yourself, Felix.",
      "data": "Tell me about yourself, Felix."
    },
    {
      "type": "Action.Submit",
      "title": "Please redirect me to an operator.",
      "data": "Please redirect me to an operator.",
      "value": "Please redirect me to an operator."
    },
    {
      "type": "Action.Submit",
      "title": "How are you today, Felix?",
      "data": "How are you today, Felix?"
    }
  ]
}